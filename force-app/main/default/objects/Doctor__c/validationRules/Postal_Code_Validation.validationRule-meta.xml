<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Postal_Code_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>NOT REGEX( Postal_Code__c , &quot;^$|[0-9]{2}-[0-9]{3}&quot;)</errorConditionFormula>
    <errorDisplayField>Postal_Code__c</errorDisplayField>
    <errorMessage>Postal code is invalid!</errorMessage>
</ValidationRule>
